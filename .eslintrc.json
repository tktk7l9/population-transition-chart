{
    "env": {
      "es2020": true,
      "browser": true,
      "node": true
    },
    "parser": "bable-eslint",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 2015,
      "sourceType": "module",
      "allowImportExportEverywhere": true
    },
    "plugins": [
      "react"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "prettier"
    ],
    "rules": {
      "no-console": "off",
      "no-extra-semi": "warn",
      "quotes": ["warn", "single"],
      "space-before-blocks": [
        "warn", {
          "functions": "always"
        }
      ]
    }
  }